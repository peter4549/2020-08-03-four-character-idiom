<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:buttonStyle">@style/ButtonTypeface</item>
        <item name="android:textViewStyle">@style/TextViewTypeface</item>
    </style>

    <style name="ButtonTypeface" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/noto_serif_font_family</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextViewTypeface" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="android:fontFamily">@font/noto_serif_font_family</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>
